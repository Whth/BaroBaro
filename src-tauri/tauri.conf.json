{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BaroBaro",
  "version": "0.1.7",
  "identifier": "BaroBaro",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "BaroBaro",
        "width": 870,
        "height": 660,
        "transparent": true,
        "minWidth": 870,
        "minHeight": 660
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/BaroBaro.ico",
      "icons/BaroBaro.png"
    ]
  }
}
