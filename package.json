{
  "name": "barobaro",
  "description": "A dedicated Mod Manager for Barotrauma, base on steamcmd.",
  "license": "LGPL-3.0",
  "author": {
    "name": "Whth",
    "email": "zettainspector@foxmail.com"
  },
  "private": true,
  "version": "0.1.7",
  "type": "module",
  "scripts": {
    "gen": "node scripts/gen_proto.cjs",
    "sync": "node scripts/sync_version.cjs",
    "dev": "pnpm gen && pnpm sync && vite",
    "fmt": "biome format src --write --vcs-use-ignore-file=true && cargo fmt --manifest-path src-tauri/Cargo.toml",
    "lint": "biome lint src --write --vcs-use-ignore-file=true",
    "build": "pnpm gen && pnpm sync && vue-tsc --noEmit && vite build",
    "preview": "pnpm gen && pnpm sync && vite preview",
    "tauri": "tauri"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.10.1",
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-opener": "^2.5.2",
    "@vicons/ionicons5": "^0.13.0",
    "bytes": "^3.1.2",
    "naive-ui": "^2.43.2",
    "number-abbreviate": "^2.0.0",
    "vue": "^3.5.24",
    "vue-clipboard3": "^2.0.0",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@tauri-apps/cli": "^2.9.4",
    "@types/bytes": "^3.1.5",
    "@types/number-abbreviate": "^2.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "ts-proto": "^2.8.3",
    "typescript": "~5.9.3",
    "vite": "^7.2.2",
    "vue-tsc": "^3.1.4"
  }
}
